<div class="user-profile">
    <h1>Hello, {{ fullName }}</h1>
    <div class="l-side">
        <img src="{{ avatar }}"  />
    </div>
    <div class="r-side">
        <div class="description">
            <p class="user-info">
                {{ userInfo }}
            </p>
        </div>
        <div class="user-email">
           User email: {{ email }}
        </div>
        <div class="user-nickname">
            Username: {{ username }}
        </div>
        <div class="last-login">
            <p>Last login: {{lastLoginDate}}</p>
            <p>Last IP: {{lastLoginIp}}</p>
        </div>
        <div class="bio-info">
            {{ bio }}
        </div>
        <div class="edit-profile">
            <a href="user-edit/{{_id}}">Edit profile</a>
        </div>
    </div>
    <div class="liked-plays">
        <h3>Liked plays</h3>
    {{#each likedPlays }}
        {{> playCard}}
    {{else}}
        <p>You don`t have liked plays</p>
    {{/each}}
    </div>
</div>