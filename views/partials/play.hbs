<div>
    <div class="home-image">
        <img src="{{ imageUrl }}"
            alt="{{ title }}">
    </div>
    <div class="info">
        <h4>{{ title }}</h4>
        {{#if isLoggedIn}}
        <div class="info-buttons">
            <a class="btn details" href="/play/{{ _id }}">Details</a>
            <span class="likes">{{#if usersLiked.length}}{{ usersLiked.length }}{{else}}0{{/if}}</span>
        </div>
        {{/if}}
    </div>
</div>