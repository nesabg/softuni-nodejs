<div class="container">

    <section class="details">
        <h1>{{title}}</h1>
        <div>
            <img src="{{imageUrl}}" />
        </div>
    </section>

    <section class="details">
        <h3>Theater Description</h3>
        <p>{{description}}</p>
        <div class="buttons">

            {{#if isAuthor}}
                <a class="btn delete" href="/delete/{{_id}}">Delete</a>
                <a class="btn edit" href="/edit-play/{{_id}}">Edit</a>
            {{/if}}

            {{#if isUserLiked}}
                <span class="liked">You have already liked this play!</span>
            {{else}}
                <a class="btn like" href="/like/{{_id}}">Like</a>
            {{/if}}
        </div>
    </section>
</div>